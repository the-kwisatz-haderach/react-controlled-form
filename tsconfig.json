{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "build",
    "removeComments": true,
    "downlevelIteration": true,
    "isolatedModules": true
  },
  "exclude": ["**/stories/*"]
}
